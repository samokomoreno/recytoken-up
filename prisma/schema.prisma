datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  emailVerified DateTime?
  name          String?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  description String
  price       Float
  currency    String
  latitude    Float
  longitude   Float
  sellerName  String
  status      String   @default("Disponible")
  createdAt   DateTime @default(now())
}

model Transaction {
  id            Int      @id @default(autoincrement())
  productId     Int
  buyerId       String
  sellerId      String
  escrowEnabled Boolean  @default(false)
  status        String   @default("Pendiente")
  createdAt     DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])
}